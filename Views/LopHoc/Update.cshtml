@using BaoTest1.ViewModel
@model LopHocViewModel;

<h1>Edit Lop Hoc</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LopHocRespone.TenLopHoc" class="control-label"></label>
                <input asp-for="LopHocRespone.TenLopHoc" class="form-control" value="@Model.LopHocRespone.TenLopHoc" />
            </div>
            <div class="form-group">
                <label asp-for="LopHocRespone.PhongHoc" class="control-label"></label>
                <input asp-for="LopHocRespone.PhongHoc" class="form-control" value="@Model.LopHocRespone.PhongHoc"/>
            </div>
            <div>
                <input type="hidden" asp-for="LopHocRespone.MaLopHoc" value="@Model.LopHocRespone.MaLopHoc" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
                <button type="submit" class="btn btn-success">Agree</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
